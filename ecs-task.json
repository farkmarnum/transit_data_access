{
    "family": "transit-data-access",
    "taskRoleArn": "ecsTaskExecutionRole",
    "executionRoleArn": "ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "parser",
            "image": "517918230755.dkr.ecr.us-east-2.amazonaws.com/transit-data-access/parser",
            "cpu": 256,
            "memory": 512,
            "memoryReservation": 256,
            "essential": true,
            "environment": [
                {
                    "name": "REDIS_HOSTNAME",
                    "value": "transit-data-access-001.3boibd.0001.use2.cache.amazonaws.com"
                },
                {
                    "name": "REDIS_PORT",
                    "value": "6379"
                },
                {
                    "name": "MTA_API_KEY",
                    "value": "f775a76bd1960c98831b3c2b06c19bb5"
                }
            ],
            "startTimeout": 60,
            "stopTimeout": 30,
            "hostname": "parser",
            "interactive": true,
            "pseudoTerminal": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/transit-data-access",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "web-server",
            "image": "517918230755.dkr.ecr.us-east-2.amazonaws.com/transit-data-access/web_server",
            "cpu": 256,
            "memory": 512,
            "memoryReservation": 256,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "REDIS_HOSTNAME",
                    "value": "transit-data-access-001.3boibd.0001.use2.cache.amazonaws.com"
                },
                {
                    "name": "REDIS_PORT",
                    "value": "6379"
                },
                {
                    "name": "WEBSOCKET_SERVER_PORT",
                    "value": "8000"
                }
            ],
            "dependsOn": [
                {
                    "containerName": "parser",
                    "condition": "START"
                }
            ],
            "startTimeout": 60,
            "stopTimeout": 30,
            "hostname": "web-server",
            "interactive": true,
            "pseudoTerminal": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/transit-data-access",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "web-client",
            "image": "517918230755.dkr.ecr.us-east-2.amazonaws.com/transit-data-access/web_client",
            "cpu": 256,
            "memory": 512,
            "memoryReservation": 256,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "WEBSOCKET_SERVER_PORT",
                    "value": "8000"
                }
            ],
            "dependsOn": [
                {
                    "containerName": "web-server",
                    "condition": "START"
                }
            ],
            "startTimeout": 60,
            "stopTimeout": 30,
            "hostname": "web-client",
            "interactive": true,
            "pseudoTerminal": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/transit-data-access",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "pidMode": "host",
    "ipcMode": "none"
}
